---
// Contact.astro
---

<section id="contact" class="relative w-full max-w-7xl mx-auto px-2 md:px-32 py-32">
    <!-- Background Elements -->
    <div class="absolute inset-0 -z-10">
      <div class="absolute top-40 right-0 w-96 h-96 bg-accentColor/30 rounded-full blur-3xl"></div>
      <div class="absolute bottom-20 left-20 w-72 h-72 bg-accentColor/60 rounded-full blur-3xl"></div>
    </div>
  
    <!-- Section Header -->
    <div class="mb-20">
      <h2 class="text-5xl font-bold text-white mb-6">Contact Us</h2>
      <div class="w-20 h-1 bg-accentColor rounded-full"></div>
    </div>
  
    <!-- Contact Form -->
    <form 
      action="https://formsubmit.co/your-email@example.com" 
      method="POST"
      class="max-w-2xl mx-auto space-y-6"
    >
      <!-- Name Input -->
      <div class="group">
        <label for="name" class="block text-white mb-2">Name</label>
        <input
          type="text"
          id="name"
          name="name"
          required
          class="w-full p-4 rounded-xl bg-gray-900/50 backdrop-blur-sm border border-gray-800 
                 hover:border-accentColor/50 focus:border-accentColor/50 transition-all duration-300
                 text-white placeholder-gray-400 outline-none"
          placeholder="Your name"
        />
      </div>

      <!-- Website Input -->
      <div class="group">
        <label for="website" class="block text-white mb-2">Your website</label>
        <input
          type="text"
          id="website"
          name="website"
          required
          class="w-full p-4 rounded-xl bg-gray-900/50 backdrop-blur-sm border border-gray-800 
                 hover:border-accentColor/50 focus:border-accentColor/50 transition-all duration-300
                 text-white placeholder-gray-400 outline-none"
          placeholder="https://yourwebsite.com"
        />
      </div>
  
      <!-- Email Input -->
      <div class="group">
        <label for="email" class="block text-white mb-2">Email</label>
        <input
          type="email"
          id="email"
          name="email"
          required
          class="w-full p-4 rounded-xl bg-gray-900/50 backdrop-blur-sm border border-gray-800 
                 hover:border-accentColor/50 focus:border-accentColor/50 transition-all duration-300
                 text-white placeholder-gray-400 outline-none"
          placeholder="your@email.com"
        />
      </div>
  
      <!-- Subject Input -->
      <div class="group">
        <label for="subject" class="block text-white mb-2">Subject</label>
        <input
          type="text"
          id="subject"
          name="_subject"
          required
          class="w-full p-4 rounded-xl bg-gray-900/50 backdrop-blur-sm border border-gray-800 
                 hover:border-accentColor/50 focus:border-accentColor/50 transition-all duration-300
                 text-white placeholder-gray-400 outline-none"
          placeholder="How can we help?"
        />
      </div>
  
      <!-- Message Input -->
      <div class="group">
        <label for="message" class="block text-white mb-2">Message</label>
        <textarea
          id="message"
          name="message"
          required
          rows="6"
          class="w-full p-4 rounded-xl bg-gray-900/50 backdrop-blur-sm border border-gray-800 
                 hover:border-accentColor/50 focus:border-accentColor/50 transition-all duration-300
                 text-white placeholder-gray-400 outline-none resize-none"
          placeholder="Your message..."
        ></textarea>
      </div>
  
      <!-- FormSubmit Configuration -->
      <input type="hidden" name="_template" value="table">
      <input type="hidden" name="_captcha" value="false">
  
      <!-- Submit Button -->
      <button
        type="submit"
        class="w-full py-4 px-8 rounded-xl bg-accentColor text-black font-bold
               hover:bg-accentColor/80 transition-all duration-300"
      >
        Send Message
      </button>
    </form>
  </section>